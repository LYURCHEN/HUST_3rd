/* pages/me/index/index.wxss */
page {
  height: 100%;
  width: 100%;
  background: #f4f4f4;
}

.container {
  background: #f4f4f4;
  height: auto;
  overflow: hidden;
  widows: 100%;
}

/*用户信息*/
.profile-info {
  width: 100%;
  height: 280rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: flex-start;
  padding: 0,30.25rpx;
  background: #333;
}

.profile-info .avatar{
  height: 148rpx;
  width: 148rpx;
  border-radius: 50%;
}

.profile-info .info{
  flex: 1;
  height: 85rpx;
  padding-left: 31.25rpx;
}

.profile-info .name{
  display: block;
  height: 45rpx;
  line-height: 45rpx;
  color: #fff;
  font-size: 37.5rpx;
  margin-bottom:10rpx;
}

.profile-info .level{
  display: block;
  height: 30rpx;
  line-height: 30rpx;
  color: #7f7f7f;
  font-size: 30rpx;
}

/*菜单*/
.user-menu{
  width: 100%;
  height: auto;
  overflow: hidden;
  background: #fff;
}

.user-menu.item{
  float: left;
  width:50%;
  height: 200rpx;
  border-right: 1px solid rgba(0,0,0,0.15);
  border-bottom: 1px solid rgba(0,0,0,0.15);
  text-align: center;
}

.user-menu.item.a{
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.user-menu.icon{
  margin: 0 auto;
  display: block;
  height: 52.803rpx;
  width: 79.2045;
  margin-bottom: 16rpx;
}

.user-menu.icon.publish{
  background:url("https://i.postimg.cc/63pLCd5P/image.png");
  background-size: 79.2045rpx 52.803rpx;
}

.user-menu.icon.star{
  background: url("https://i.postimg.cc/jjdZhVMv/image.png");
  background-size: 79.2045rpx 52.803rpx;
}

.user-menu.icon.notice{
  background: url("https://i.postimg.cc/d31T7J4b/image.png");
  background-size: 79.2045rpx 52.803rpx;
}

.user-menu.icon.advice{
  background: url("https://i.postimg.cc/d0Yk225m/image.png");
  background-size: 79.2045rpx 52.803rpx;
}

.user-menu.txt{
  display: block;
  height: 24rpx;
  width: 100%;
  font-size: 25rpx;
  color: #000;
}
