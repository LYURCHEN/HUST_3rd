/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.userinfo{
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 140rpx;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.item-container{
  display: flex;
  margin-top: 400rpx
}

.image{
  width: 400rpx;
  height: 200rpx;
  margin: 5 25rpx;
  flex: 1
}

.content{
  flex: 2
}

.title{
  font-weight: bold;
  flex: 2
}

.action{
  flex:1
}

.tag{
  width: 80rpx;
  padding: 0 0rpx;
  background: #EA5149;
  border-radius: 20%;
  margin: 10rpx;
  color: white;
  font-size: 28rpx; 
  flex: center;
}

.cart{
  padding: 15rpx;
  background: #EA5149;
  border-radius: 50%;
  color: white;
  width: 40rpx;
}

.swiper{
  width:100%
}

.slide-image{
  width:750rpx;
  height:370rpx;
}

.uploader, .tunnel {
  margin-top: 40rpx;
  height: 140rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  font-size: 32rpx;
  color: #007aff;
  background-color: white;
  background-size: cover;
}

.userinfo-nickname::after {
  border: none;
}

