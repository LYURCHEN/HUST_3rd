/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.userinfo{
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 140rpx;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.item-container{
  display: flex;
  margin-top: 50rpx
}

.image{
  width: 400rpx;
  height: 200rpx;
  margin: 5 25rpx;
  flex: 1
}

.content{
  flex: 2
}

.title{
  font-weight: bold;
  flex: 2
}

.action{
  flex:1
}

.tag{
  width: 120rpx;
  padding: 0 0rpx;
  background: #EA5149;
  border-radius: 20%;
  margin: 10rpx;
  color: white;
  font-size: 28rpx; 
  flex: center;
}

.cart{
  padding: 15rpx;
  background: #EA5149;
  border-radius: 50%;
  color: white;
  width: 40rpx;
}

.swiper{
  width:100%;
  margin:50rpx;
}

.slide-image{
  width:750rpx;
  height:370rpx;
}

.uploader, .tunnel {
  margin-top: 40rpx;
  height: 140rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar:after {
  border: none;
}

.weui-search-bar {
  position: relative;
  padding: 8px 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  background-color: #EFEFF4;
  border-top: 1rpx solid #D7D6DC;
  border-bottom: 1rpx solid #D7D6DC;
}
.weui-icon-search_in-box {
  position: absolute;
  left: 10px;
  top: 7px;
}
.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
          flex: auto;
  border-radius: 5px;
  background: #FFFFFF;
  border: 1rpx solid #E6E6EA;
}
.weui-search-bar__box {
  position: relative;
  padding-left: 30px;
  padding-right: 30px;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}
.weui-search-bar__input {
  height: 28px;
  line-height: 28px;
  font-size: 14px;
}
.weui-search-bar__cancel-btn {
  margin-left: 10px;
  line-height: 28px;
  color: rgb(46, 42, 43);
  white-space: nowrap;
}

