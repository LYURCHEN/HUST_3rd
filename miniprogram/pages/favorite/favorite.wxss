page {
  background: #fafaf8;
}

.header{
  height: 30px;
  font-size: 14px;
  border-style: solid;
  border-width: 3px;
  border-color:  	#FF0000 ;
  text-align: center;
  line-height: 30px;
}

.header image{
  width: 28px;
  height: 28px;
}

.cart {
  padding: 100px 0 0 0;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  color: #999;
}

.baoyou {
  font-size: 18px;
  color: #db2929;
  padding: 10px;
}

.goods {
  background: #fff;
  margin-bottom: 10px;
  padding: 5px 5px 0px 5px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-style:groove;
  border-width: 5rpx;
  border-color: 	#FF0000;
  border-radius: 3%;
}

.goods image {
  width: 100px;
  height: 100px;
  border: 1px solid #ddd;
}

.goods .good-cont {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: space-between;
  color: #000;
  font-size: 14px;
  padding: 0px;
  height: 100px;
}

.goods .good-cont .goods-navigator {
  display: flex;
  flex: 2;
}

.goods .good-cont .tag{
  width: 80rpx;
  padding: 0 0rpx;
  background: 	#FF0000;
  border-radius: 0%;
  margin: 10rpx;
  color: white;
  font-size: 28rpx; 
  flex: center;
}

.goods .good-cont .good-price {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex: 3;
  margin-top: 15px;
}

.goods .good-cont .good-price .price {
  font-size: 16px;
  color: 	#FF0000;
}

.goods .good-cont .good-price .btn-box image {
  width: 28px;
  height: 28px;
  border: 0;
  margin: 0;
}